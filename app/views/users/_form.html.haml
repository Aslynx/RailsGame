.row
  .col-md-3
  .col-md-6
    .well
      = form_for(@user, html: {multipart: true, class: "form-horizontal", id: "user-form"}) do |f|
        %fieldset
          %legend 
            - if @user.id.nil?
              Add an user
            - else
              Edit 
              = @user.username
          %ul
            - @user.errors.full_messages.each do |error|
              %li= error
          .form-group
            = f.label :username, class: 'col-lg-2 control-label'
            .col-lg-10.field
              = f.text_field :username, class: 'form-control', id: 'user-username'
          .form-group
            = f.label :street, class: 'col-lg-2 control-label'
            .col-lg-10.field
              = f.text_field :street, class: 'form-control', id: 'user-street'
          .form-group
            = f.label :city, class: 'col-lg-2 control-label'
            .col-lg-10.field
              = f.text_field :city, class: 'form-control', id: 'user-city'
          .form-group
            = f.label :state, class: 'col-lg-2 control-label'
            .col-lg-10.field
              = f.text_field :state, class: 'form-control', id: 'user-state'
          .form-group
            = f.label :country, class: 'col-lg-2 control-label'
            .col-lg-10.field
              = f.text_field :country, class: 'form-control', id: 'user-country'    
          .form-group
            - if @user.avatar.exists?
              = image_tag @user.avatar.url
              %br/
            = f.label :avatar, "Attach an Image", class: 'col-lg-4 control-label'
            .col-lg-8
            = f.file_field :avatar, class: 'form-control-file'
          .form-group
            .row
              .col-md-6.col-md-offset-1
                - if @user.id.nil?
                  = link_to "Back to Users", users_path(), class: 'btn btn-default'
                - else
                  = link_to "Back to User", user_path(@user), class: 'btn btn-default'
              .col-md-4.col-md-offset-1
                = f.submit class: 'btn btn-primary'

