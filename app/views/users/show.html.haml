%h3
  = @user.username

= link_to "edit", edit_user_path(@user)
= link_to "delete", user_path(@user), method: :delete, data: {confirm: "Really delete the user?"}

.container
  .row
    - if @user.avatar.exists?
      = image_tag @user.avatar.url
  .row
    = @user.street + " " + @user.city + " " + @user.state + " " + @user.country
  .row
    List of tournaments
    - @user.tournaments.uniq.each do |t|
      = link_to t.name, tournament_path(t)
  .row
    List of games
    - @user.games.uniq.each do |g|
      = link_to g.title, game_path(g)
  .row
    Statistics
    .row
      .col-md-4
        %table.table
          %thead
            %tr
              %th Victories
              %th Defeats
              %th Points
          %tbody
            %tr
              %td
                = @user.nb_victories
              %td
                = @user.nb_defeats
              %td
                = @user.total_points

= link_to "Back to users List", users_path
