.container
  %h1{style:"text-align:center"}
    Profile of
    = @user.username

  - if can? :update, @user
    .row
      .col-lg-4
      .col-lg-4
        .btn-group.btn-group-justified{style:"text-align:center"}
          = link_to "edit", edit_user_path(@user), class: 'btn btn-link'
          = link_to "delete", user_path(@user), method: :delete, data: {confirm: "Really delete the user?"}, class: 'btn btn-link'
          = link_to "Back to Users", users_path, class: 'btn btn-link'
  - else
    .row
      .col-lg-4
      .col-lg-4{style:"text-align:center"}
        = link_to "Back to Users", users_path, class: 'btn btn-link'
  %hr
  .row
    - if @user.avatar.exists?
      .col-md-6
        = image_tag @user.avatar.url
      .col-md-6
        .well
          %h3 Personal Information
          %p 
            %strong Street :
            = @user.street 
          %p
            %strong City : 
            = @user.city
          %p
            %strong State :
            = @user.state
          %p
            %strong Country :
            = @user.country
          %h3 Statistics
          %p
            %strong Number of victories :
            = @user.nb_victories
          %p
            %strong Number of defeats :
            = @user.nb_defeats
          %p
            %strong Total points :
            = @user.total_points
    - else
      .col-md-3
      .col-md-6
        .well
          %h3 Personal Information
          %p 
            %strong Street :
            = @user.street 
          %p
            %strong City : 
            = @user.city
          %p
            %strong State :
            = @user.state
          %p
            %strong Country :
            = @user.country
          %h3 Statistics
          %p
            %strong Number of victories :
            = @user.nb_victories
          %p
            %strong Number of defeats :
            = @user.nb_defeats
          %p
            %strong Total points :
            = @user.total_points
  .row.well
    .col-md-6
      %h3 List of participating tournaments
      %lu.list-group
        - @user.tournaments.uniq.each do |t|
          %li.list-group-item
            = link_to t.name, tournament_path(t)
    .col-md-6  
      %h3 List of games played
      %lu.list-group
        - @user.games.uniq.each do |g|
          %li.list-group-item
            = link_to g.title, game_path(g)

