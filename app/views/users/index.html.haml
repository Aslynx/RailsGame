%h1{style: "text-align:center"} All Users

.row
	.col-md-3
	.col-md-6
		= link_to "Add a new user", new_user_path, class: 'btn btn-link'
		.well
			%ul.list-group
				- @users.each do |user|
					%li.list-group-item
						.row
							.col-md-9
								%h4
									= user.username
							.col-md-3
								.btn-group
									.btn-group
										%a.btn.btn-default.dropdown-toggle{"aria-expanded" => "false", "data-toggle" => "dropdown", href: "#"}
											Actions	
											%span.caret
										%ul.dropdown-menu
											%li
												= link_to "See Profile", user_path(user)
											%li
												= link_to "Edit Profile", edit_user_path(user)
											%li
												= link_to "Delete User", user_path(user), method: :delete, data: {confirm: "Really delete " + user.username + "?"}						