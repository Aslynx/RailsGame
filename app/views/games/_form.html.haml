= form_for(@game) do |f|
  %ul
    - @game.errors.full_messages.each do |error|
      %li= error
  .form-group
    = f.label :title
    %br/
    = f.text_field :title
  .form-group
    = f.label :description
    %br/
    = f.text_area :description
  .form-group
    = f.select :genre, select_genre_options
  %p
    = f.submit
